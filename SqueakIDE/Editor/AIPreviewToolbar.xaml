<Canvas x:Class="SqueakIDE.Editor.AIPreviewToolbar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="30" Width="80">
    <Border Background="#333333" 
            CornerRadius="3" 
            BorderBrush="#444444" 
            BorderThickness="1">
        <StackPanel Orientation="Horizontal" 
                    Margin="5,0">
            <Button Content="✓" 
                    Click="Accept_Click"
                    Width="30"
                    Height="20"
                    Margin="0,0,5,0"
                    Background="#225522"/>
            <Button Content="✕" 
                    Click="Reject_Click"
                    Width="30"
                    Height="20"
                    Background="#552222"/>
        </StackPanel>
    </Border>
</Canvas> 