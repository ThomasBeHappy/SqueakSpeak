<Window x:Class="SqueakIDE.Dialogs.LiveShareLinkDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LiveShare Session Created" 
        Height="200" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E1E">
    <StackPanel Margin="20">
        <TextBlock Text="Share this URL with others to join the session:" 
                   Foreground="White" 
                   Margin="0,0,0,10"
                   TextWrapping="Wrap"/>
        <TextBox x:Name="LinkTextBox"
                 IsReadOnly="True"
                 Background="#252526"
                 Foreground="White"
                 Padding="5"
                 Margin="0,0,0,15"
                 TextWrapping="Wrap"/>
        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button x:Name="CopyButton"
                    Content="Copy Link"
                    Click="CopyButton_Click"
                    Width="100"
                    Height="30"
                    Margin="0,0,10,0"
                    Background="#444444"
                    Foreground="White">
                <Button.ToolTip>
                    <ToolTip>Copy link to clipboard</ToolTip>
                </Button.ToolTip>
            </Button>
            <Button Content="Close"
                    Click="CloseButton_Click"
                    Width="100"
                    Height="30"
                    Background="#444444"
                    Foreground="White"/>
        </StackPanel>
    </StackPanel>
</Window> 