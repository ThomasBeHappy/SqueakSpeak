<Window x:Class="SqueakIDE.Dialogs.ThemeEditorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Theme Editor" Height="600" Width="800"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource ForegroundBrush}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Theme Info -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Theme Name:" Foreground="White"/>
            <TextBox x:Name="ThemeNameBox" Margin="0,5,0,10"/>
            
            <TextBlock Text="Description:" Foreground="White"/>
            <TextBox x:Name="DescriptionBox" Margin="0,5,0,10"/>
            
            <CheckBox x:Name="IsDarkThemeBox" Content="Dark Theme" 
                      Foreground="White"/>
        </StackPanel>

        <!-- Color Editors -->
        <ScrollViewer Grid.Row="1">
            <StackPanel>
                <GroupBox Header="Main Colors" Margin="0,0,0,10" Foreground="White">
                    <StackPanel>
                        <Label Content="Primary Background" Foreground="White"/>
                        <xctk:ColorPicker x:Name="PrimaryBackgroundPicker" Margin="0,0,0,5"/>
                        
                        <Label Content="Secondary Background" Foreground="White"/>
                        <xctk:ColorPicker x:Name="SecondaryBackgroundPicker" Margin="0,0,0,5"/>
                        
                        <Label Content="Accent Color" Foreground="White"/>
                        <xctk:ColorPicker x:Name="AccentColorPicker" Margin="0,0,0,5"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Editor Colors" Margin="0,0,0,10" Foreground="White">
                    <StackPanel>
                        <Label Content="Editor Background" Foreground="White"/>
                        <xctk:ColorPicker x:Name="EditorBackgroundPicker" Margin="0,0,0,5"/>
                        
                        <Label Content="Editor Text" Foreground="White"/>
                        <xctk:ColorPicker x:Name="EditorTextPicker" Margin="0,0,0,5"/>
                        
                        <Label Content="Line Numbers" Foreground="White"/>
                        <xctk:ColorPicker x:Name="LineNumbersPicker" Margin="0,0,0,5"/>
                        
                        <Label Content="Current Line" Foreground="White"/>
                        <xctk:ColorPicker x:Name="CurrentLinePicker" Margin="0,0,0,5"/>
                        
                        <Label Content="Selection" Foreground="White"/>
                        <xctk:ColorPicker x:Name="SelectionPicker" Margin="0,0,0,5"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Syntax Colors" Margin="0,0,0,10" Foreground="White">
                    <StackPanel>
                        <Label Content="Keywords" Foreground="White"/>
                        <xctk:ColorPicker x:Name="KeywordColorPicker" Margin="0,0,0,5"/>
                        
                        <Label Content="Strings" Foreground="White"/>
                        <xctk:ColorPicker x:Name="StringColorPicker" Margin="0,0,0,5"/>
                        
                        <Label Content="Comments" Foreground="White"/>
                        <xctk:ColorPicker x:Name="CommentColorPicker" Margin="0,0,0,5"/>
                        
                        <Label Content="Numbers" Foreground="White"/>
                        <xctk:ColorPicker x:Name="NumberColorPicker" Margin="0,0,0,5"/>
                        
                        <Label Content="Operators" Foreground="White"/>
                        <xctk:ColorPicker x:Name="OperatorColorPicker" Margin="0,0,0,5"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Preview" Click="Preview_Click" 
                    Width="80" Margin="0,0,10,0" Foreground="White"/>
            <Button Content="Save" Click="Save_Click" 
                    Width="80" Margin="0,0,10,0" Foreground="White"/>
            <Button Content="Cancel" Click="Cancel_Click" 
                    Width="80" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window> 