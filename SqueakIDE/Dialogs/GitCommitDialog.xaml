<Window x:Class="SqueakIDE.Dialogs.GitCommitDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Commit Changes" Height="450" Width="600"
        Background="#FF202020">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Commit Message:" 
                   Foreground="White" 
                   Margin="0,0,0,5"/>
        
        <TextBox x:Name="CommitMessageBox" 
                 Grid.Row="1" 
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 Background="#FF303030"
                 Foreground="White"
                 Margin="0,0,0,10"/>

        <ScrollViewer Grid.Row="2" 
                      Margin="0,0,0,10"
                      Background="#FF303030">
            <StackPanel x:Name="FileList"/>
        </ScrollViewer>

        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Commit" 
                    Width="75" 
                    Click="CommitButton_Click"
                    Background="#FF404040"
                    Foreground="White"
                    Margin="0,0,10,0"/>
            <Button Content="Cancel" 
                    Width="75" 
                    Click="CancelButton_Click"
                    Background="#FF404040"
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</Window> 