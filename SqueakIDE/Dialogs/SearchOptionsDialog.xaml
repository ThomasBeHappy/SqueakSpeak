<Window x:Class="SqueakIDE.Dialogs.SearchOptionsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Search Options" 
        Height="200" Width="300"
        Background="#FF202020"
        WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10">
        <CheckBox x:Name="MatchCaseCheckBox" 
                  Content="Match case" 
                  Margin="0,5"
                  Foreground="White"/>
        <CheckBox x:Name="WholeWordCheckBox" 
                  Content="Match whole word" 
                  Margin="0,5"
                  Foreground="White"/>
        <CheckBox x:Name="RegexCheckBox" 
                  Content="Use regular expressions" 
                  Margin="0,5"
                  Foreground="White"/>
        <CheckBox x:Name="SearchAllFilesCheckBox" 
                  Content="Search in all files" 
                  Margin="0,5"
                  Foreground="White"/>
        
        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="OK" 
                    Width="70" 
                    Click="OkButton_Click"
                    Background="#FF303030"
                    Foreground="White"
                    Margin="0,0,10,0"/>
            <Button Content="Cancel" 
                    Width="70" 
                    Click="CancelButton_Click"
                    Background="#FF303030"
                    Foreground="White"/>
        </StackPanel>
    </StackPanel>
</Window> 