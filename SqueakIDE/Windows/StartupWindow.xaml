<Window x:Class="SqueakIDE.Windows.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Welcome to Squeak IDE" Height="450" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#FF202020">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Squeak IDE" 
                   FontSize="24" 
                   Foreground="White"
                   Margin="0,0,0,20"/>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>

            <!-- Recent Projects List -->
            <Border Background="#FF252526" 
                    BorderBrush="#FF3F3F46" 
                    BorderThickness="1">
                <ListView x:Name="RecentProjectsList"
                          Background="Transparent"
                          Foreground="White"
                          BorderThickness="0"
                          MouseDoubleClick="RecentProjectsList_DoubleClick">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="{Binding Name}" 
                                           FontWeight="Bold"/>
                                <TextBlock Text="{Binding Path}"
                                           Foreground="#FF999999"
                                           FontSize="11"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Border>

            <!-- Actions Panel -->
            <StackPanel Grid.Column="2">
                <Button Content="New Project"
                        Height="40"
                        Margin="0,0,0,10"
                        Click="NewProject_Click"
                        Background="#FF2D2D30"
                        Foreground="White"/>
                
                <Button Content="Open Project"
                        Height="40"
                        Margin="0,0,0,10"
                        Click="OpenProject_Click"
                        Background="#FF2D2D30"
                        Foreground="White"/>
                
                <Separator Margin="0,10"/>
                
                <Button Content="Continue Without Project"
                        Height="40"
                        Margin="0,10,0,0"
                        Click="ContinueWithoutProject_Click"
                        Background="#FF2D2D30"
                        Foreground="White"/>
            </StackPanel>
        </Grid>

        <!-- Footer -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <TextBlock Text="Squeak IDE Version 1.0"
                       Foreground="#FF999999"/>
        </StackPanel>
    </Grid>
</Window> 